<script>
    async function searchGithub() {
        const username = document.getElementById("github-field").value.trim();
        const notif = document.getElementById("notif");
        // default
        notif.textContent = '';
        notif.classList.add('d-none');
        notif.classList.remove('text-success', 'text-danger', 'ml-3');
        if (!username) {
            notif.textContent = 'Masukkan username terlebih dahulu.';
            notif.classList.remove('d-none');
            notif.classList.add('text-danger', 'ml-3');
            return;
        }
        try {
            const response = await fetch('/githubcheck', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    username: username
                })
            });
            const result = await response.json();
            if (response.ok) {
                notif.textContent = `‚úÖ ${result.message}`;
                notif.classList.remove('d-none');
                notif.classList.add('text-success', 'ml-5');
            } else {
                notif.textContent = `‚ùå ${result.message}`;
                notif.classList.remove('d-none');
                notif.classList.add('text-danger', 'ml-5');
            }
        } catch (error) {
            console.error(error);
            notif.textContent = "Gagal memeriksa GitHub.";
            notif.classList.remove('d-none');
            notif.classList.add('text-danger', 'ml-5');
        }
    }
</script>