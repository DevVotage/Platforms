<div class="col-12 col-md-6 order-md-1 order-last">
    <h3>
        <%= title %>
    </h3>
</div>

<section class="section">
    <div class="card">
        <div class="card-header">
            User Status Data
        </div>
        <div class="card-body">
            <table class="table table-striped table-datatable" id="userTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Github Acc</th>
                        <th>Stack</th>
                        <th>Status Approval</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((u, i) => { %>
                    <tr>
                        <td>
                            <%= u.PersonalName %>
                        </td>
                        <td>
                            <%= u.Email %>
                        </td>
                        <td>
                            <a href="<%= u.ProfileUrl %>"
                                target="_blank" rel="noopener noreferrer">
                                <%= u.ProfileUrl %>
                            </a>
                        </td>
                        <td>
                            <%= u.Stack %>
                        </td>
                        <td>
                            <% if (u.Approval === 'Y') { %><span
                                class="badge bg-success">Verified</span>
                            <% } else if (u.Approval === 'N') { %>
                            <span class="badge bg-warning">Unverified</span>
                            <% } else { %><span
                                class="badge bg-secondary">Unknown</span>
                            <% } %>
                        </td>
                        <td>
                            <form method="post">
                                <button type="submit"
                                    formaction="/approve/<%= u.id %>"
                                    class="btn btn-primary"><i
                                        class="bi bi-check-lg"></i></button>
                                <button type="submit"
                                    formaction="/reject/<%= u.id %>"
                                    class="btn btn-danger"><i
                                        class="bi bi-x-lg"></i></button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
    let usertable = document.querySelector('#userTable');
    let dataTable = new simpleDatatables.DataTable(usertable);
</script>